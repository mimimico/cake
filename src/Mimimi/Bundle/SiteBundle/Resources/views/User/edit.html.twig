{% extends "MimimiSiteBundle:Default:two-column.page.html.twig" %}

{% block javascript %}
<script src="{{ asset('bundles/mimimisite/js/like_demo.js') }}"></script>
<script src="{{ asset('bundles/mimimisite/js/upload_demo.js') }}"></script>
<script src="{{ asset('bundles/mimimisite/js/slider.js') }}"></script>
<script src="{{ asset('bundles/mimimisite/js/notifications.js') }}"></script>
{% endblock %}

{% block aside %}
{% include "MimimiSiteBundle:User:sidebar.html.twig" %}
<div class="block box" id="invites">
	<h3>Invites</h3>
	<h6 class="title">3 invites left</h6>
	<form method="post" class="registration" action="index.php">
		<input type="text" placeholder="Email of prospect" />
		<input type="submit" value="Send invite">
	</form>
	<a href="#" class="small-link box">Request more invitatons!</a>
</div>
{% endblock %}

