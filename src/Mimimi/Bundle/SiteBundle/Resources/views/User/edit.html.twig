					<span>Email</span>
					<input type="email" value="{{ user.email }}" placeholder="Enter your Email" />
				</div>

				<div class="row">
					<span>Firstname</span>
					<input type="text" value="{{ user.firstname }}" placeholder="Enter your Name" />
				</div>

				<div class="row">
					<span>Lastname</span>
					<input type="text" value="{{ user.lastname }}" placeholder="Enter your Surname" />
