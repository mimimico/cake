{% block content %}
<div class="item">
	<div class="block box">
		<h3 class="title">
			{{ item.title }}
			<!--a class="like liked"></a-->
		</h3>
		<div class="photos">
			<ul id="images">
			{% for image in item.images %}
				<li><img src="../../uploads/images/{{ image.path }}"/></li>
			{% endfor %}
			</ul>
		</div>
		<div class="side-info">
			<h3>Options</h3>
			<ul class="options">
				<li><div>Category:</div><a href="{{ item.getCategory().getId() }}">{{ item.getCategory().getTitle() }}</a></li>
				<li><div>Size:</div>{{ item.sizes }}</li>
				<li><div>Materials:</div>{% for material in item.getMaterials() %}{% if not loop.first %},{% endif %}<a href="#">{{ material }}</a>{% endfor %}
				<!--li><div>Feedback:</div><a href="#" id="reviewsLink">51 reviews</a></li-->
			</ul>
			<h3>Tags</h3>
			<ul class="tags">
			{% for tag in item.getTags() %}
				<li><a href="#">{{ tag }}</a></li>
			{% endfor %}
			</ul>
			<!--h3>Share</h3>
